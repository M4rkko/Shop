@model ShopTARge23.Models.KinderGarten.KinderGartenDetailsViewModel

@{
    ViewData["Title"] = "KinderGarten Details";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <tr>
        <th>Group Name</th>
        <td>@Model.GroupName</td>
    </tr>
    <tr>
        <th>Children Count</th>
        <td>@Model.ChildrenCount</td>
    </tr>
    <tr>
        <th>Kindergarten Name</th>
        <td>@Model.KindergartenName</td>
    </tr>
    <tr>
        <th>Teacher</th>
        <td>@Model.Teacher</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>@Model.CreatedAt</td>
    </tr>
    <tr>
        <th>Updated At</th>
        <td>@Model.UpdatedAt</td>
    </tr>
</table>

<a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Edit</a>
