@model ShopTARge23.Models.KinderGarten.KinderGartenDetailsViewModel

@{
    ViewData["Title"] = "Delete Kindergarten";
}

<h1>@ViewData["Title"]</h1>

<p>Are you sure you want to delete the following Kindergarten?</p>

<table class="table">
    <tr>
        <th>Group Name</th>
        <td>@Model.GroupName</td>
    </tr>
    <tr>
        <th>Children Count</th>
        <td>@Model.ChildrenCount</td>
    </tr>
    <tr>
        <th>Kindergarten Name</th>
        <td>@Model.KindergartenName</td>
    </tr>
    <tr>
        <th>Teacher</th>
        <td>@Model.Teacher</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>@Model.CreatedAt</td>
    </tr>
    <tr>
        <th>Updated At</th>
        <td>@Model.UpdatedAt</td>
    </tr>
</table>

<form asp-action="DeleteConfirmation" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
